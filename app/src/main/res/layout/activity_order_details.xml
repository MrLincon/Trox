<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:context=".activity.OrderDetailsActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/colorBlackHighEmp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ubuntu_medium"
            android:text="@string/order_details"
            android:textColor="@color/colorBlackHighEmp"
            android:textSize="16sp"></TextView>

    </LinearLayout>

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:scrollbars="none">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

         <androidx.cardview.widget.CardView
             android:id="@+id/status"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardBackgroundColor="@color/colorWhiteHighEmp"
             android:layout_marginTop="16dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             app:cardElevation="4dp"
             app:cardCornerRadius="16dp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="16dp"
                 android:orientation="vertical">

                 <TextView
                     android:id="@+id/status_title"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/ubuntu_medium"
                     android:text="Status"
                     android:textColor="@color/colorBlackHighEmp"
                     android:layout_marginBottom="12dp"
                     android:textSize="16sp"></TextView>

                 <TextView
                     android:id="@+id/status_description"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/ubuntu_medium"
                     android:text="Description"
                     android:textColor="@color/colorBlackMidEmp"
                     android:textSize="12sp"></TextView>

             </LinearLayout>


         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/instructions"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardBackgroundColor="@color/colorWhiteHighEmp"
             android:layout_marginTop="16dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             app:cardElevation="4dp"
             app:cardCornerRadius="16dp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="16dp"
                 android:orientation="vertical">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/ubuntu_medium"
                     android:text="@string/packaging_instructions"
                     android:textColor="@color/colorBlackHighEmp"
                     android:layout_marginBottom="12dp"
                     android:textSize="16sp"></TextView>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/ubuntu_medium"
                     android:text="Please use proper packaging to keep your item safe.
Write down the receiverâ€™s details on the package to ensure delivery."
                     android:textColor="@color/colorBlackMidEmp"
                     android:textSize="12sp"></TextView>

             </LinearLayout>


         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/rating"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginTop="16dp"
             app:cardBackgroundColor="@color/colorWhiteHighEmp"
             app:cardCornerRadius="16dp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="16dp"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:weightSum="2">

                     <TextView
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:fontFamily="@font/ubuntu_medium"
                         android:text="@string/delivery_man"
                         android:textColor="@color/colorBlackHighEmp"
                         android:textSize="16sp" />

                     <TextView
                         android:id="@+id/rate_now"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:fontFamily="@font/ubuntu_medium"
                         android:gravity="right"
                         android:text="Rate Now"
                         android:textColor="@color/colorPrimary"
                         android:textSize="16sp"
                         android:visibility="visible"></TextView>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="16dp"
                     android:orientation="horizontal">

                     <ImageView
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:src="@drawable/user_image"></ImageView>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_marginLeft="16dp"
                         android:layout_marginRight="16dp"
                         android:orientation="vertical">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:fontFamily="@font/ubuntu_medium"
                             android:text="Harriet J. Frye"
                             android:textColor="@color/colorBlackMidEmp"
                             android:textSize="14sp"></TextView>

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="4dp"
                             android:drawableLeft="@drawable/ic_rating"
                             android:drawablePadding="8dp"
                             android:fontFamily="@font/ubuntu_medium"
                             android:text="4.8"
                             android:textColor="@color/colorBlackHighEmp"
                             android:textSize="14sp"></TextView>


                     </LinearLayout>

                 </LinearLayout>

             </LinearLayout>


         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/order_id"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardBackgroundColor="@color/colorWhiteHighEmp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:layout_marginTop="16dp"
             app:cardElevation="4dp"
             app:cardCornerRadius="16dp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="16dp"
                 android:orientation="vertical">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/ubuntu_medium"
                     android:text="@string/order_id"
                     android:textColor="@color/colorBlackHighEmp"
