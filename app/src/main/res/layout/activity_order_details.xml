                         android:gravity="right"
                         android:textColor="@color/colorBlackMidEmp"
                         android:textSize="14sp"></TextView>



                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_marginLeft="16dp"
