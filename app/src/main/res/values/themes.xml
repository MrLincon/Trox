<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhiteHighEmp</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="bottomNavTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlackMidEmp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="tabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>